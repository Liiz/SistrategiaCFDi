@using Sistrategia.SAT.CFDiWebSite.Models
@model EmisorDetailViewModel
@{
  ViewBag.Title = LocalizedStrings.Emisor_DetailsTitle;
}
@*.dl-horizontal*@ 


<div class="page-header clearfix">
  <div class="pull-left">
    <h1>@ViewBag.Title</h1>
    <h4>@LocalizedStrings.Emisor_DetailsSubtitle</h4>
  </div>
  <div class="pull-right">
    <div class="btn-group" style="bottom: 26px;position: relative;top:26px;">
      @Html.ActionLink("Editar", "Edit", new { id = Model.PublicKey.ToString("N") }, new { @class = "btn btn-primary", @role = "button" })
    </div>
  </div>
</div> 




@*<h1>@ViewBag.Title</h1>*@
<p class="text-success">@ViewBag.StatusMessage</p>
@*<div>*@
  @*<h4>@LocalizedStrings.Emisor_DetailsSubtitle</h4>
  <hr />*@

  <div class="row">
  <div class="col-md-8">
    <h3>@LocalizedStrings.Emisor_DetailsGeneralTitle</h3>
    <dl class="dl-horizontal">
      <dt>@Html.DisplayNameFor(m => m.Nombre):</dt>
      <dd>@Html.DisplayFor(m => m.Nombre)</dd>
      <dt>@Html.DisplayNameFor(m => m.RFC):</dt>
      <dd>@Html.DisplayFor(m => m.RFC)</dd>
      <dt>@Html.DisplayNameFor(m => m.RegimenFiscal):</dt>
      <dd>@Html.DisplayFor(m => m.RegimenFiscal)</dd>
    </dl>

    <h3>@LocalizedStrings.Emisor_DetailsDomicilioFiscalTitle</h3>
    <dl class="dl-horizontal">

      <dt>@Html.DisplayNameFor(m => m.Calle):</dt>
      <dd>@Html.DisplayFor(m => m.Calle)</dd>
      <dt>@Html.DisplayNameFor(m => m.NoExterior):</dt>
      <dd>@Html.DisplayFor(m => m.NoExterior)</dd>
      <dt>@Html.DisplayNameFor(m => m.NoInterior):</dt>
      <dd>@Html.DisplayFor(m => m.NoInterior)</dd>
      <dt>@Html.DisplayNameFor(m => m.Colonia):</dt>
      <dd>@Html.DisplayFor(m => m.Colonia)</dd>
      <dt>@Html.DisplayNameFor(m => m.Municipio):</dt>
      <dd>@Html.DisplayFor(m => m.Municipio)</dd>
      <dt>@Html.DisplayNameFor(m => m.Localidad):</dt>
      <dd>@Html.DisplayFor(m => m.Localidad)</dd>
      <dt>@Html.DisplayNameFor(m => m.Estado):</dt>
      <dd>@Html.DisplayFor(m => m.Estado)</dd>
      <dt>@Html.DisplayNameFor(m => m.Pais):</dt>
      <dd>@Html.DisplayFor(m => m.Pais)</dd>
      <dt>@Html.DisplayNameFor(m => m.CodigoPostal):</dt>
      <dd>@Html.DisplayFor(m => m.CodigoPostal)</dd>
      <dt>@Html.DisplayNameFor(m => m.Referencia):</dt>
      <dd>@Html.DisplayFor(m => m.Referencia)</dd>
    </dl>    
  </div>
    <div class="col-md-4">
      <h3>Contacto e Imágenes</h3>
      <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Telefono):</dt>
        <dd>@Html.DisplayFor(m => m.Telefono)</dd>
        <dt>@Html.DisplayNameFor(m => m.Correo):</dt>
        <dd>@Html.DisplayFor(m => m.Correo)</dd>
      </dl>
      @*<h3>Imágenes</h3>*@
      <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.LogoUrl):</dt>
        <dd><img style="margin-bottom:24px; max-height:64px;" src="@Model.LogoUrl" /></dd>
        <dt>@Html.DisplayNameFor(m => m.CifUrl):</dt>
        <dd><img style="max-height:198px;" src="@Model.CifUrl" /></dd>
      </dl>
</div>
  </div>
@*</div>*@
