@using Sistrategia.SAT.CFDiWebSite.Models
@model ComprobanteUploadViewModel
@{
  ViewBag.Title = "Cargar un comprobante existente";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Upload", "Comprobante", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" })) {
  @Html.AntiForgeryToken()
  @*<h4>@LocalizedStrings.Account_RegisterSubtitle</h4>*@
  <hr />
  @Html.ValidationSummary("", new { @class = "text-danger" })

  <div class="form-group">
    @Html.LabelFor(m => m.ComprobanteArchivo, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
      @Html.TextBoxFor(m => m.ComprobanteArchivo, new { @class = "form-control", type = "file" })
    </div>
  </div>

  <div class="form-group">
    @Html.LabelFor(m => m.ComprobantePDFArchivo, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
      @Html.TextBoxFor(m => m.ComprobantePDFArchivo, new { @class = "form-control", type = "file" })
    </div>
  </div>

  

  <hr />
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" class="btn btn-primary" value="@LocalizedStrings.SaveButton" />
    </div>
  </div>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}



