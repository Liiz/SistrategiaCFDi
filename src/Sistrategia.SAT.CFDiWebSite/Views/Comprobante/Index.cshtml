@using Sistrategia.SAT.CFDiWebSite.Models
@model ComprobanteIndexViewModel
@{
  ViewBag.Title = "Lista de Comprobantes";
}
<div class="page-header clearfix">
  <h1 class="pull-left">@ViewBag.Title</h1>
  <div class="pull-right">
    <div class="btn-group" style="bottom: 26px;position: relative;top:26px;">
      @*@Html.ActionLink("Agregar", "Create", new { id = Model.Emisor.PublicKey }, new { @class = "btn btn-primary", @role = "button" })*@
      @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-primary", @role = "button" })
    </div>
  </div>
</div>

<br />
@foreach (var comprobante in Model.Comprobantes)
{
    <table>
        <tbody>
            <tr>
                <td>
                    <a href="@Url.Action("~/Comprobante/Details/" + comprobante.PublicKey.ToString("N"))">
                        <div class="circle noselect">
                            <span>@comprobante.Receptor.Nombre.Substring(0, 1)</span>
                        </div>
                    </a>
                </td>
                <td>
                    <h4 class="media-heading">@Html.ActionLink(string.Format("{0}{1} - {2}", @comprobante.Serie, @comprobante.Folio, @comprobante.Receptor.Nombre), "Details", "Comprobante", new { Id = @comprobante.PublicKey.ToString("N") }, null)</h4>
                    <h5 class="media-heading">@comprobante.Fecha.ToLongDateString()</h5>
                </td>
                <td>
                    <h4 class="media-heading">
                        <span style="font-weight:600;color:#7986CB;" class="">@comprobante.Total.ToString("C") MXN</span>
                    </h4>
                </td>
                <td>                    
                    <a href="#"><span style="font-size:20px; font-weight:normal;color:#a0a0a0;" class="glyphicon glyphicon-envelope"></span></a>&nbsp;&nbsp;
                    <a href="@Url.Action("ShowXml", new { id = comprobante.PublicKey.ToString("N") })" class="hidden-xs"><span style="font-size:20px; font-weight:normal;color:#a0a0a0;" class="glyphicon glyphicon-file"></span></a>&nbsp;&nbsp;
                    <a href="@Url.Action("ShowHtml", new { id = comprobante.PublicKey.ToString("N") })" class="hidden-xs"><span style="font-size:20px; font-weight:normal;color:#a0a0a0;" class="glyphicon glyphicon-print"></span></a>&nbsp;
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding-top:0px;">
                            <span style="font-size:20px; font-weight:normal;color:#333;" class="glyphicon glyphicon-option-vertical"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#"><span style="font-size:20px; font-weight:normal;color:#7986CB;" class="glyphicon glyphicon-pencil"></span> Editar</a></li>
                            <li><a href="#"><span style="font-size:20px; font-weight:normal;color:#7986CB;" class="glyphicon glyphicon-qrcode"></span> Timbrar</a></li>
                            @*<li role="separator" class="divider"></li>*@
                            <li><a href="#"><span style="font-size:20px; font-weight:normal;color:#7986CB;" class="glyphicon glyphicon-ban-circle"></span> Cancelar</a></li>
                            <li class="visible-xs-block">
                                <a href="@Url.Action("ShowXml", new { id = comprobante.PublicKey.ToString("N") })"><span style="font-size:20px; font-weight:normal;color:#7986CB;" class="glyphicon glyphicon-file"></span> XML</a> 
                            </li>
                            <li class="visible-xs-block">
                                <a href="@Url.Action("ShowHtml", new { id = comprobante.PublicKey.ToString("N") })"><span style="font-size:20px; font-weight:normal;color:#7986CB;" class="glyphicon glyphicon-print"></span> Imprimir</a> 
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
}




